{
  "name": "todo-bug-challenge",
  "version": "1.0.0",
  "description": "30-minute code challenge: Fix bugs in a Todo app",
  "main": "server/index.js",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "server": "nodemon server/index.js --watch server",
    "client": "yarn workspace client run start",
    "install-all": "yarn install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "code-challenge",
    "todo",
    "bugs",
    "react",
    "express"
  ],
  "author": "Code Challenge Team",
  "license": "MIT"
}
